<%- include("../partials/user/header") %>

<!--/col-->

<div class="col main pt-5 mt-3 bg-light">
    <div class="title">
        <h4 class="display-5 d-sm-block"> 
            ACCOUNT HISTORY
            <% var message %>
            <span class="text-success"><%= message %></span>
        </h4>
    </div>

    <!-- add user form -->
    <div class="container users">

        <div class="table-responsive pt-3 pb-5">
            <table class="userTable table table-bordered table-stripped">
                <thead>
                    <tr>
                        <th>S/N</th>
                        <th>Date</th>
                        <th>Description</th>
                        <th>Ref</th>
                        <th>Withdrawals</th>
                        <th>Deposit</th>
                        <th>Balance</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <% var row = 0 %>
                    
                    <% row++ %>
                <% account.forEach(history =>{ %>
                    <tr class="tableRow-" + row>
                        <td><%= row %></td>
                        <td><%=history.dateTwo%> </td>
                        <td><%=history.description%> </td>
                        <td><%= history.ref%></td>
                        <td><%= history.withdrawals%></td>
                        <td><%=history.deposit%> </td>
                        <td><%= history.account_balance%></td>
                        <td>
                            <a href="/customer/account-history/delete/<%= history._id %>/" >
                                <button onclick="return confirm('are you sure you want to delete this record');"  class="btn btn-danger fa fa-trash" data-id="129" data-toggle="tooltip" title="Delete"></button>
                            </a>
                        </td>
                    </tr>   
                <% }) %>
                                                       
                </tbody>
            </table>
        </div>
    
    </div>

</div>
<!--/main col-->
</div>

</div>
<!--/.container-->


<%- include("../partials/user/footer") %>
